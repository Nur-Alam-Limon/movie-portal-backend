{
    "info": {
      "name": "Movie and Series Rating Portal API",
      "_postman_id": "12345-67890",
      "description": "API for the Movie and Series Rating & Streaming Portal"
    },
    "item": [
      {
        "name": "Authentication",
        "item": [
          {
            "name": "User Registration",
            "request": {
              "method": "POST",
              "url": {
                "raw": "{{base_url}}/auth/register",
                "host": ["{{base_url}}"],
                "path": ["auth", "register"]
              },
              "body": {
                "mode": "raw",
                "raw": "{\"email\": \"test@example.com\", \"password\": \"testPassword123\"}"
              },
              "headers": [
                { "key": "Content-Type", "value": "application/json" }
              ]
            },
            "response": []
          },
          {
            "name": "User Login",
            "request": {
              "method": "POST",
              "url": {
                "raw": "{{base_url}}/auth/login",
                "host": ["{{base_url}}"],
                "path": ["auth", "login"]
              },
              "body": {
                "mode": "raw",
                "raw": "{\"email\": \"test@example.com\", \"password\": \"testPassword123\"}"
              },
              "headers": [
                { "key": "Content-Type", "value": "application/json" }
              ]
            },
            "response": []
          }
        ]
      },
      {
        "name": "Movies and Series",
        "item": [
          {
            "name": "Get Movies and Series List",
            "request": {
              "method": "GET",
              "url": {
                "raw": "{{base_url}}/movies-series",
                "host": ["{{base_url}}"],
                "path": ["movies-series"]
              }
            },
            "response": []
          },
          {
            "name": "Get Movie/Series Details",
            "request": {
              "method": "GET",
              "url": {
                "raw": "{{base_url}}/movies-series/{{movieId}}",
                "host": ["{{base_url}}"],
                "path": ["movies-series", "{{movieId}}"]
              }
            },
            "response": []
          },
          {
            "name": "Add Movie/Series (Admin)",
            "request": {
              "method": "POST",
              "url": {
                "raw": "{{base_url}}/admin/movies-series",
                "host": ["{{base_url}}"],
                "path": ["admin", "movies-series"]
              },
              "body": {
                "mode": "raw",
                "raw": "{\"title\": \"Movie Title\", \"description\": \"Movie Description\", \"genre\": \"Drama\", \"releaseYear\": 2025, \"director\": \"Director Name\", \"cast\": \"Actor1, Actor2\", \"platform\": \"Netflix\", \"price\": { \"buy\": 15, \"rent\": 5 }}"
              },
              "headers": [
                { "key": "Content-Type", "value": "application/json" }
              ]
            },
            "response": []
          }
        ]
      },
      {
        "name": "Review System",
        "item": [
          {
            "name": "Submit Review",
            "request": {
              "method": "POST",
              "url": {
                "raw": "{{base_url}}/reviews/{{movieId}}",
                "host": ["{{base_url}}"],
                "path": ["reviews", "{{movieId}}"]
              },
              "body": {
                "mode": "raw",
                "raw": "{\"rating\": 8, \"review\": \"Great movie!\", \"tags\": [\"classic\", \"underrated\"], \"spoiler\": false}"
              },
              "headers": [
                { "key": "Content-Type", "value": "application/json" },
                { "key": "Authorization", "value": "Bearer {{access_token}}" }
              ]
            },
            "response": []
          },
          {
            "name": "Get Reviews for Movie/Series",
            "request": {
              "method": "GET",
              "url": {
                "raw": "{{base_url}}/reviews/{{movieId}}",
                "host": ["{{base_url}}"],
                "path": ["reviews", "{{movieId}}"]
              }
            },
            "response": []
          },
          {
            "name": "Approve/Unpublish Review (Admin)",
            "request": {
              "method": "PATCH",
              "url": {
                "raw": "{{base_url}}/admin/reviews/{{reviewId}}/status",
                "host": ["{{base_url}}"],
                "path": ["admin", "reviews", "{{reviewId}}", "status"]
              },
              "body": {
                "mode": "raw",
                "raw": "{\"status\": \"approved\"}"
              },
              "headers": [
                { "key": "Content-Type", "value": "application/json" }
              ]
            },
            "response": []
          }
        ]
      },
      {
        "name": "Payment System",
        "item": [
          {
            "name": "Initiate Payment",
            "request": {
              "method": "POST",
              "url": {
                "raw": "{{base_url}}/payment/initiate-payment",
                "host": ["{{base_url}}"],
                "path": ["payment", "initiate-payment"]
              },
              "body": {
                "mode": "raw",
                "raw": "{\"total_amount\": 20, \"currency\": \"USD\", \"tran_id\": \"12345\", \"success_url\": \"{{base_url}}/payment/success\", \"fail_url\": \"{{base_url}}/payment/fail\", \"cancel_url\": \"{{base_url}}/payment/cancel\", \"customer\": {\"name\": \"Customer Name\", \"email\": \"customer@example.com\", \"phone\": \"1234567890\", \"address\": \"Customer Address\"}, \"itemIDs\": [\"movieId1\", \"movieId2\"]}"
              },
              "headers": [
                { "key": "Content-Type", "value": "application/json" }
              ]
            },
            "response": []
          },
          {
            "name": "Payment Success Callback",
            "request": {
              "method": "POST",
              "url": {
                "raw": "{{base_url}}/ssl/success/:id",
                "host": ["{{base_url}}"],
                "path": ["ssl", "success", ":id"]
              },
              "body": {
                "mode": "raw",
                "raw": "{\"tran_id\": \"12345\"}"
              },
              "headers": [
                { "key": "Content-Type", "value": "application/json" }
              ]
            },
            "response": []
          },
          {
            "name": "Payment Failure Callback",
            "request": {
              "method": "POST",
              "url": {
                "raw": "{{base_url}}/ssl/fail",
                "host": ["{{base_url}}"],
                "path": ["ssl", "fail"]
              },
              "body": {
                "mode": "raw",
                "raw": "{\"tran_id\": \"12345\"}"
              },
              "headers": [
                { "key": "Content-Type", "value": "application/json" }
              ]
            },
            "response": []
          },
          {
            "name": "Payment Cancel Callback",
            "request": {
              "method": "POST",
              "url": {
                "raw": "{{base_url}}/ssl/cancel",
                "host": ["{{base_url}}"],
                "path": ["ssl", "cancel"]
              },
              "body": {
                "mode": "raw",
                "raw": "{\"tran_id\": \"12345\"}"
              },
              "headers": [
                { "key": "Content-Type", "value": "application/json" }
              ]
            },
            "response": []
          }
        ]
      }
    ]
  }
  